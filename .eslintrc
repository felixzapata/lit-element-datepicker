
{
  "extends": [
    "airbnb-base"
  ],
  "plugins": [
    "html"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script"
  },
  "globals": {
    "describe": true,
    "it": true,
    "beforeEach": true,
    "afterEach": true,
    "flush": true,
    "fixture": true,
    "expect": true,
    "MockInteractions": true,
    "Polymer": false,
    "document": false,
    "window": false,
    "navigator": false,
    "cleartimeout": false
  },
  "rules": {
    "new-cap": 0,
    "func-names": 0,
    "object-shorthand": 0,
    "comma-dangle": 0,
    "no-var": 0,
    "no-plusplus": 0,
    "no-underscore-dangle": 0,
    "prefer-arrow-callback": 0,
    "keyword-spacing": ["error", { "overrides": {
      "if": { "after": false },
      "for": { "after": false },
      "while": { "after": false }
      }
    }],
    "space-before-function-paren": 0,
    "prefer-template": 0,
    "strict": 0,
    "max-len": ["error", 120],
    "vars-on-top": 0,
    "no-unused-expressions": ["error", { "allowTernary": true }],
    "no-param-reassign": 0,
    "prefer-spread": 0
  }
}
